<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/persistence
                                 http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
	version="2.0">
	<persistence-unit name="sqlitePU">
		<provider>org.hibernate.ejb.HibernatePersistence</provider>

		<!-- JDBC properties -->
		<properties>
			<!-- JDBC URL para SQLite -->
			<property name="javax.persistence.jdbc.url" value="jdbc:sqlite:Pedido.db" />

			<!-- Driver JDBC para SQLite -->
			<property name="javax.persistence.jdbc.driver" value="org.sqlite.JDBC" />

			<!-- Dialeto do Hibernate para SQLite -->
			<property name="hibernate.dialect" value="org.hibernate.dialect.H2Dialect" />

			<!-- Configuração do modo de criação do banco (pode ser 'update', 'create', 
				'validate', etc.) -->
			<property name="hibernate.hbm2ddl.auto" value="create" />

			<!-- Ativar logs de SQL -->
			<property name="hibernate.show_sql" value="true" />

			<!-- Não usar cache de segundo nível -->
			<property name="hibernate.cache.provider_class" value="org.hibernate.cache.NoCacheProvider" />

			<!-- Defina o gerenciamento do banco de dados -->
			<property name="hibernate.c3p0.min_size" value="5" />
			<property name="hibernate.c3p0.max_size" value="20" />
			<property name="hibernate.c3p0.timeout" value="300" />
			<property name="hibernate.c3p0.max_statements" value="50" />
		</properties>
	</persistence-unit>
</persistence>
